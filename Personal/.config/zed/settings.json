// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "font_fallbacks": ["Vazir Code Hack"],
    "font_features": { "calt": true, "cv01": true },
    "shell": {
      "program": "fish",
    },
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "ui_font_family": "GeistMono Nerd Font",
  "buffer_font_family": "GeistMono Nerd Font",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark",
  },

  "session": {
    "trust_all_worktrees": true,
  },
  "auto_update": false,
  "git_panel": {
    "tree_view": true,
    "sort_by_path": false,
  },
  "colorize_brackets": true,
  "show_edit_predictions": true,
  "auto_update_extensions": {
    "enabled": false,
    "vue-language-server": false,
  },
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 110,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": "warning", // same values as the `diagnostics_max_severity` from the editor settings
    },
  },
  "cursor_blink": false,
  "relative_line_numbers": "enabled",
  "restore_on_startup": "last_session",
  "restore_on_file_reopen": true,
  "close_on_file_delete": false,
  "icon_theme": "Colored Zed Icons Theme Dark",

  "agent_servers": {
    "kimi": {
      "type": "registry",
    },
    "qwen-code": {
      "type": "registry",
    },
  },
  "agent": {
    "tool_permissions": {
      "default": "allow",
    },
    "favorite_models": [],
    "default_model": {
      "provider": "nano",
      "model": "minimax/minimax-m2.5",
    },
    "dock": "right",
    "expand_edit_card": false,
    "use_modifier_to_send": false,
    "enable_feedback": true,
    "default_profile": "write",
  },
  "lsp": {
    "oxlint": {
      "initialization_options": {
        "settings": {
          "configPath": null,
          "run": "onType",
          "disableNestedConfig": false,
          "fixKind": "safe_fix",
          "typeAware": true,
          "unusedDisableDirectives": "deny",
        },
      },
    },
    "oxfmt": {
      "initialization_options": {
        "settings": {
          "configPath": null,
          "run": "onSave",
        },
      },
    },
    "vtsls": {
      "settings": {
        // For TypeScript:
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 8192,
            "experimental": { "enableProjectDiagnostics": false },
            "disableAutomaticTypeAcquisition": true,
          },
        },
        // For JavaScript:
        "javascript": {
          "tsserver": {
            "maxTsServerMemory": 8192,
            "experimental": { "enableProjectDiagnostics": false },
          },
        },
      },
    },
    "dart": {
      "binary": {
        "path": "/home/rylan/.flutter_sdk/bin/dart",
        "arguments": ["language-server", "--protocol=lsp"],
      },
    },
    "vscode-css-language-server": {
      "settings": {
        "css": {
          "lint": {
            "unknownAtRules": "ignore",
          },
        },
      },
    },
  },
  "languages": {
    "CSS": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "YAML": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "Markdown": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "HTML": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "JavaScript": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
        {
          "code_action": "source.fixAll.oxc",
        },
      ],
    },
    "JSON": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "TypeScript": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
    "Vue.js": {
      "format_on_save": "on",
      "prettier": {
        "allowed": false,
      },
      "formatter": [
        {
          "language_server": {
            "name": "oxfmt",
          },
        },
      ],
    },
  },
  "context_servers": {
    "nuxt-hub": {
      "enabled": false,
      "url": "https://hub.nuxt.com/mcp",
      "settings": {},
    },
    "shadcn-vue": {
